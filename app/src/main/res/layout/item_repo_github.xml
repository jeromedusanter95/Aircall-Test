<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.jeromedusanter.aircalltest.ui.main.features.repogithub.list.RepoGithubItemViewModel" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unit_0"
        android:layout_marginEnd="@dimen/unit_0"
        android:layout_marginBottom="@dimen/unit_2"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/unit_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/unit_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/unit_1"
                android:text="@{viewModel.name}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.description}" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>