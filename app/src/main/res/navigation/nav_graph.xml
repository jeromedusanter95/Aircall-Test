<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_repository">

    <navigation
        android:id="@+id/navigation_repository"
        app:startDestination="@id/fragment_repository_list">
        <fragment
            android:id="@+id/fragment_repository_list"
            android:name="com.jeromedusanter.aircalltest.ui.main.features.repository.list.RepositoryListFragment"
            android:label="@string/repositoryList_title"
            tools:layout="@layout/fragment_repository_list">

            <action
                android:id="@+id/action_navigateToRepositoryDetails"
                app:destination="@id/fragment_repository_details" />

        </fragment>
        <fragment
            android:id="@+id/fragment_repository_details"
            android:name="com.jeromedusanter.aircalltest.ui.main.features.repository.details.RepositoryDetailsFragment"
            android:label="@string/repositoryDetails_title"
            tools:layout="@layout/fragment_repository_details" />
    </navigation>

</navigation>